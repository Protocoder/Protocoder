<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!--<ImageView-->
            <!--android:layout_width="120dp"-->
            <!--android:layout_height="120dp"-->
            <!--android:layout_marginBottom="16dp"-->
            <!--android:layout_marginLeft="16dp"-->
            <!--android:layout_marginRight="16dp"-->
            <!--android:layout_marginTop="25dp"-->
            <!--android:gravity="center"-->
            <!--android:src="@drawable/protocoder_help" />-->

        <TextView
            android:id="@+id/symbolText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-condensed"
            android:gravity="left"
            android:lines="1"
            android:maxLines="1"
            android:shadowColor="#88FFFFFF"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="0.1"
            android:text=".about"
            android:textColor="#BBBBBB"
            android:textSize="125sp"
            android:typeface="normal" />


        <TextView
            android:id="@+id/help_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/about_how_to_title"
            android:textColor="@color/mwmgray"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/help_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:shadowColor="#ffffff"
            android:shadowDx="2"
            android:shadowDy="2"
            android:text="@string/about_how_to_contents"
            android:textColor="@color/mwmgray"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/about_credits_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/about_credits"
            android:textColor="@color/mwmgray"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/about_special_thanks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:shadowColor="#ffffff"
            android:shadowDx="2"
            android:shadowDy="2"
            android:text="@string/about_special_thanks"
            android:textColor="@color/mwmgray"
            android:textSize="18sp" />


    </LinearLayout>

</ScrollView>